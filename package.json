{
    "name": "harlem-workspace",
    "version": "1.0.0",
    "description": "Powerfully simple global state management for Vue 3",
    "repository": "https://github.com/andrewcourtice/harlem.git",
    "author": "Andrew Courtice <andrewcourtice@users.noreply.github.com>",
    "packageManager": "yarn@3.2.4",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "app",
        "core",
        "docs",
        "harlem",
        "examples/*",
        "packages/*",
        "extensions/*",
        "plugins/*"
    ],
    "scripts": {
        "prepare": "husky install",
        "test": "vitest",
        "build": "lerna run build --no-private",
        "release": "lerna publish --no-private --force-publish",
        "lint": "eslint . --ignore-path .gitignore --ext .js,.ts,.mjs,.vue --quiet",
        "version": "yarn install && git stage yarn.lock",
        "docs": "node ./.scripts/generate-docs.mjs"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.2.0",
        "@commitlint/config-conventional": "^17.2.0",
        "@types/fs-extra": "^9.0.13",
        "@typescript-eslint/eslint-plugin": "^5.43.0",
        "@typescript-eslint/parser": "^5.43.0",
        "@vitest/coverage-c8": "^0.25.2",
        "@vitest/ui": "^0.25.3",
        "c8": "^7.12.0",
        "esbuild-plugin-replace": "^1.3.0",
        "eslint": "^8.28.0",
        "eslint-plugin-vue": "^9.7.0",
        "fs-extra": "^11.1.0",
        "husky": "^8.0.2",
        "jsdom": "^20.0.3",
        "lerna": "^6.0.3",
        "standard-changelog": "^2.0.27",
        "tsup": "^6.5.0",
        "typedoc": "^0.23.21",
        "typedoc-plugin-markdown": "^3.13.6",
        "typescript": "^4.9.3",
        "vitest": "^0.25.2",
        "vue-eslint-parser": "^9.1.0"
    }
}
